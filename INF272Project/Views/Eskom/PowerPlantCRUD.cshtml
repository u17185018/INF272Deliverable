    <div class="wrapper">
        <h1>Add PowerPlant</h1>
        <div class="container">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-4" for="location">Plant Name:</label>
                    <input type="text" class="form-control" id="plant" placeholder="e.g. Plant Name" required>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="location">Location:</label>
                    <input type="text" class="form-control" id="location" placeholder="e.g. Location" required>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="supplier">Supplier:</label>
                    <input type="text" class="form-control" id="supplier" placeholder="e.g. Supplier" required>
                </div>
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-ok"></span> Add
        </button>
        <button type="button" onclick="window.location.href='@Url.Action("HomePage", "Eskom")';" class="btn btn-default btn-lg">
