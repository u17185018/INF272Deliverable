        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item"><a class="nav-link" href="#">Storage</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Stations</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Power Levels</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Suppliers</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Power Plants</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Generators</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Distribution Centers</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Silos</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Maintenance Roster</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Add
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("UserCRUD", "Eskom" )">User</a>
                        <a class="dropdown-item" href="@Url.Action("StationCRUD", "Eskom" )">Station</a>
                        <a class="dropdown-item" href="@Url.Action("SupplierCRUD", "Eskom" )">Supplier</a>
                        <a class="dropdown-item" href="@Url.Action("SiloCRUD", "Eskom" )">Silo</a>
                        <a class="dropdown-item" href="@Url.Action("DistributionCenterCRUD", "Eskom" )">Distribution Center</a>
                        <a class="dropdown-item" href="@Url.Action("PowerPlantCRUD", "Eskom" )">Powerplant</a>
                        <a class="dropdown-item" href="@Url.Action("GeneratorsCRUD", "Eskom" )">Generators</a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav mr-right">

                <li class="nav-item"><a class="nav-link" href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="wrapper">

        <h1>Add User</h1>

        <div class="container">

            <form class="form-horizontal">

                <div class="form-group">
                    <label class="control-label col-sm-4" for="name">First Name:</label>                   
                        <input type="text" class="form-control" id="name" placeholder="e.g. Jack" required>                    
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4"  for="txname">Surname:</label>
                    <input id="itemname" type="text" name="surname" class="form-control" placeholder="e.g. Black" required />
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-4" for="txdesc">ID Number:</label>
                    <input id="txdesc" type="text" name="id" class="form-control" placeholder="Use the correct format" required />
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="gen">Gender:</label>
                    <select class="form-control" id="gen" name="gender">
                        <option >Male</option>
                        <option >Female</option>
                        <option >Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">Birth Year:</label>
                    <input id="itemname" type="date" name="birth" class="form-control" placeholder="e.g. Birth date" required />
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">Country:</label>
                    <input id="itemname" type="text" name="surname" class="form-control" placeholder="e.g. South Africa" required />
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">City:</label>
                    <input id="itemname" type="text" name="city" class="form-control" placeholder="e.g. Pretoria" required />
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">Department:</label>
                    <input id="itemname" type="text" name="dep" class="form-control" placeholder="e.g. Electrics" required />
                </div>
                <br />

                <h1>Create Login Credentials</h1>
                <br />
                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">Email Address:</label>
                    <input id="itemname" type="text" name="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">Username:</label>
                    <input id="itemname" type="text" name="user" class="form-control" required />
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">Password:</label>
                    <input id="itemname" type="text" name="pass" class="form-control" required />
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="txname">Confirm Password:</label>
                    <input id="itemname" type="text" name="pass2" class="form-control" required />
                </div>
                <br />
                <br />
                <button type="submit" class="btn btn-dark btn-lg">
                    <i class="fa fa-check"></i> Sign Up
                </button>

                <button type="button" onclick="window.location.href='@Url.Action("HomePage", "Eskom")';" class="btn btn-dark btn-lg">
                    <i class="fa fa-remove"></i>Cancel
                </button>

            </form>

        </div>
    </div>
</body>
</html>
