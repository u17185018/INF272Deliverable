<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Gideon, Barend, Steven">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">

</head>
<body>

    <div class="header"><img class="headimg" src="https://i.imgur.com/UHU2hB9.png" /></div>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #034f84;">
        <a class="navbar-brand" href="@Url.Action("HomePage", "Eskom")"><img src="https://i.imgur.com/W3wSxXQ.png" width="32" height="30" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("UserList", "Eskom" )">Users</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("StorageCapacity", "Eskom" )">Storage</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("StationInfo", "Eskom" )">Stations</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("PowerLevels", "Eskom" )">Power Levels</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("SupplierInfo", "Eskom" )">Suppliers</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("PowerPlants", "Eskom" )">Power Plants</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Generators", "Eskom" )">Generators</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("DistributionCenters", "Eskom" )">Distribution Centers</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("SiloList", "Eskom" )">Silos</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("MaintenanceRoster", "Eskom" )">Maintenance Roster</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Add
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("UserCRUD", "Eskom" )">User</a>
                        <a class="dropdown-item" href="@Url.Action("StationCRUD", "Eskom" )">Station</a>
                        <a class="dropdown-item" href="@Url.Action("SupplierCRUD", "Eskom" )">Supplier</a>
                        <a class="dropdown-item" href="@Url.Action("SiloCRUD", "Eskom" )">Silo</a>
                        <a class="dropdown-item" href="@Url.Action("DistributionCenterCRUD", "Eskom" )">Distribution Center</a>
                        <a class="dropdown-item" href="@Url.Action("PowerPlantCRUD", "Eskom" )">Powerplant</a>
                        <a class="dropdown-item" href="@Url.Action("GeneratorCRUD", "Eskom" )">Generators</a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav mr-right">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Eskom" )"><i class="fa fa-power-off"></i>Login</a></li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
